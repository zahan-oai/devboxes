[user]
  name = Zahan Malkani
  email = zahan@openai.com

[core]
  editor = vi
  whitespace = trailing-space,cr-at-eol,tab-in-indent

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[alias]
  st = status
  co = checkout
  b = branch
  plus = commit -a --amend --no-edit

[push]
  default = simple
  autoSetupRemote = true

[pull]
  ff = only

[credential "https://github.com"]
    helper =
    helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
    helper =
    helper = !/usr/bin/gh auth git-credential
